=partial "doctype"
%form{:action => "#", :method => "post"}
  -@user.errors[:username].each do |e|
    %p= e
  %label{:for => "username"} Username
  %input{:type => "text", :name => "username", :id => "username", :value => @user.username, :required => "required"}
  %br
  -@user.errors[:email].each do |e|
    %p= e
  %label{:for => "email"} Email
  %input{:type => "email", :name => "email", :id => "email", :placeholder => "example@example.org", :value => @user.email, :required => "required"}
  %br
  -@user.errors[:new_password].each do |e|
    %p= e
  %label{:for => "password"} Password
  %input{:type => "password", :name => "password", :id => "password", :required => "required"}
  %br
  -@user.errors[:new_password_confirmation].each do |e|
    %p= e
  %label{:for => "password_confirmation"} Password Confirmation
  %input{:type => "password", :name => "password_confirmation", :id => "password_confirmation", :required => "required"}
  %br
  %input{:type => "submit", :value => "signup"}
